<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista del asistente de consolidación -->
    <record id="mrp_production_batch_wizard_form" model="ir.ui.view">
        <field name="name">mrp.production.batch.wizard.form</field>
        <field name="model">mrp.production.batch.wizard</field>
        <field name="arch" type="xml">
            <form string="Consolidar Órdenes de Fabricación">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="batch_name" placeholder="Nombre del Batch (opcional)"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="total_productions" readonly="1"/>
                            <field name="total_pickings" readonly="1"/>
                        </group>
                        <group>
                            <field name="picking_type_id" readonly="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="batch_description" placeholder="Descripción del batch (opcional)"/>
                    </group>
                    
                    <notebook>
                        <page string="Órdenes de Fabricación Seleccionadas">
                            <field name="production_ids" mode="list" readonly="1">
                                <list create="false" delete="false">
                                    <field name="name"/>
                                    <field name="product_id"/>
                                    <field name="product_qty"/>
                                    <field name="state" 
                                           decoration-info="state in ('draft', 'confirmed')"
                                           decoration-success="state == 'done'"
                                           decoration-warning="state == 'progress'"
                                           widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Traslados Disponibles">
                            <group>
                                <field name="picking_ids" invisible="1"/>
                            </group>
                            <field name="selected_picking_ids" widget="many2many_checkboxes">
                                <list create="false" delete="false">
                                    <field name="name"/>
                                    <field name="origin"/>
                                    <field name="location_id"/>
                                    <field name="location_dest_id"/>
                                    <field name="scheduled_date"/>
                                    <field name="state" 
                                           decoration-success="state == 'done'"
                                           decoration-info="state in ('waiting', 'confirmed', 'assigned')"
                                           decoration-muted="state == 'cancel'"
                                           widget="badge"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_create_batch" 
                            string="Crear Batch" 
                            type="object" 
                            class="btn-primary"/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Acción del asistente -->
    <record id="action_mrp_production_batch_wizard" model="ir.actions.act_window">
        <field name="name">Consolidar Órdenes de Fabricación</field>
        <field name="res_model">mrp.production.batch.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="mrp.model_mrp_production"/>
        <field name="binding_view_types">list</field>
    </record>
</odoo>