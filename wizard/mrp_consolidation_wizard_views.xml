<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista Form para Wizard -->
    <record id="view_mrp_consolidation_wizard_form" model="ir.ui.view">
        <field name="name">mrp.consolidation.wizard.form</field>
        <field name="model">mrp.consolidation.wizard</field>
        <field name="arch" type="xml">
            <form string="Consolidar Órdenes de Producción">
                <group>
                    <field name="name"/>
                    <field name="group_by_category"/>
                    <field name="include_confirmed"/>
                    <field name="include_progress"/>
                </group>
                
                <group string="Órdenes de Producción Seleccionadas">
                    <field name="production_ids" nolabel="1">
                        <list>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_qty"/>
                            <field name="state"/>
                        </list>
                    </field>
                </group>
                
                <footer>
                    <button name="create_consolidation" string="Crear Consolidación" 
                            type="object" class="btn-primary"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>